<Page x:ConnectionId='1'
    x:Class="TripPlanner.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TripPlanner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:TripPlanner.Classes"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <StackPanel Orientation="Horizontal" Padding="5" BorderThickness="1" >
                <Button x:ConnectionId='10' Name="hamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="36"                               Background="{x:Null}"/>
                <TextBlock Text="Home" FontFamily="Segoe UI" FontSize="30" Margin="20,5,0,0"/>
            </StackPanel>
        </RelativePanel>
        <StackPanel Grid.Row="1">
            <ListBox x:ConnectionId='6'                                >
                <ListBox.ItemTemplate>
                    <DataTemplate                        >
                        <StackPanel x:ConnectionId='7'>
                            <TextBlock x:ConnectionId='8'                          />
                            <TextBlock x:ConnectionId='9'                         />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>
                    
        <SplitView x:ConnectionId='2' Name="mySplitView" 
                   Grid.Row="1" 
                   OpenPaneLength="370" 
                   DisplayMode="CompactOverlay" 
                   CompactPaneLength="0" 
                   HorizontalAlignment="Left">
            <SplitView.Pane>
                <ListBox x:ConnectionId='3' SelectionMode="Single" Name="menuItems"                                              >
                    <ListBoxItem x:ConnectionId='4' Name="Home">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="25" Text="&#xE80F;"/>
                            <TextBlock Text="Home" FontFamily="Segoe" FontSize="20" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='5' Name="Recent">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="25" Text="&#xE81C;"/>
                            <TextBlock Text="Recent" FontFamily="Segoe" FontSize="20" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="25" Text="&#xE00B;" Foreground="Red" SelectionHighlightColor="#FFFF0606"/>
                            <TextBlock Text="Favorite" FontFamily="Segoe" FontSize="20" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="25" Text="&#xE930;" Foreground="#FF17B63B"/>
                            <TextBlock Text="Finished" FontFamily="Segoe" FontSize="20" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="25" Text="&#xEA39;" Foreground="#FFFF0606"/>
                            <TextBlock Text="Overdue" FontFamily="Segoe" FontSize="20" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
        </SplitView>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='11' x:Name="addNewPlan"
                          Icon="Add"
                          Label="New"
                          ToolTipService.ToolTip="Click here to add a new trip plan."
                                                   Background="Transparent" Foreground="#FF00B83A"/>
            <AppBarButton x:ConnectionId='12' x:Name="selectPlan"
                          Icon="SelectAll"
                          Label="Select"
                          ToolTipService.ToolTip="Click here to select s plan."
                          Background="Transparent"
                                                  />
           
            <AppBarButton x:ConnectionId='13' x:Name="deletePlan"
                          Icon="Delete"
                          Label="Delete"
                          ToolTipService.ToolTip="Click here to deleted selected plans."
                                                   Foreground="Red" Visibility="Collapsed"
                          />
            <AppBarButton x:ConnectionId='14' x:Name="editPlan"
                          Icon="Edit"
                          Label="Edit"
                          ToolTipService.ToolTip="Click here to edit a plan"
                                                   Foreground="Black" Visibility="Collapsed"/>
            <AppBarButton x:ConnectionId='15' x:Name="cancelPlan"
                          Icon="Cancel"
                          Label="Cancel"
                          ToolTipService.ToolTip="Click here cancel selection"
                                                   Foreground="Red" Visibility="Collapsed"/>
            
            
        </CommandBar>
    </Page.BottomAppBar>
</Page>

